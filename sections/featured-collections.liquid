{% stylesheet %}
.featured-collections {
  padding: 4rem 2rem;
  background: #F9F9F9;
}

.featured-collections__header {
  text-align: center;
  margin-bottom: 3rem;
}

.featured-collections__title {
  font-size: 2.5rem;
  font-weight: 800;
  color: #1D1D1F;
  margin-bottom: 1rem;
  background: linear-gradient(135deg, #1D1D1F 0%, #DB2955 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.featured-collections__subtitle {
  font-size: 1.2rem;
  color: #333333;
  max-width: 600px;
  margin: 0 auto;
  line-height: 1.6;
}

.featured-collections__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

.featured-collection {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 24px rgba(29, 29, 31, 0.08);
  transition: all 0.3s ease;
  position: relative;
}

.featured-collection:hover {
  transform: translateY(-8px);
  box-shadow: 0 16px 40px rgba(29, 29, 31, 0.15);
}

.featured-collection__image-container {
  position: relative;
  height: 280px;
  overflow: hidden;
}

.featured-collection__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.featured-collection:hover .featured-collection__image {
  transform: scale(1.05);
}

.featured-collection__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(29, 29, 31, 0.7) 0%, rgba(219, 41, 85, 0.7) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.featured-collection:hover .featured-collection__overlay {
  opacity: 1;
}

.featured-collection__overlay-btn {
  background: #CDAA7D;
  color: #1D1D1F;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 50px;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
  transform: translateY(20px);
  opacity: 0;
}

.featured-collection:hover .featured-collection__overlay-btn {
  transform: translateY(0);
  opacity: 1;
}

.featured-collection__overlay-btn:hover {
  background: #DB2955;
  color: white;
  transform: translateY(-2px);
}

.featured-collection__content {
  padding: 1.5rem;
}

.featured-collection__title {
  font-size: 1.3rem;
  font-weight: 700;
  color: #1D1D1F;
  margin-bottom: 0.5rem;
  text-decoration: none;
  display: block;
  transition: color 0.3s ease;
}

.featured-collection__title:hover {
  color: #DB2955;
}

.featured-collection__description {
  color: #AAAAAA;
  font-size: 0.95rem;
  line-height: 1.5;
  margin-bottom: 1rem;
}

.featured-collection__meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.featured-collection__product-count {
  color: #333333;
  font-size: 0.9rem;
  font-weight: 500;
}

.featured-collection__badge {
  background: #CDAA7D;
  color: #1D1D1F;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.featured-collection__cta {
  display: inline-block;
  width: 100%;
  padding: 0.75rem 1rem;
  background: linear-gradient(135deg, #CDAA7D 0%, #DB2955 100%);
  color: white;
  text-decoration: none;
  text-align: center;
  border-radius: 8px;
  font-weight: 600;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.featured-collection__cta::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.featured-collection__cta:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(205, 170, 125, 0.3);
}

.featured-collections__view-all {
  text-align: center;
  margin-top: 3rem;
}

.featured-collections__view-all-btn {
  display: inline-block;
  padding: 1rem 2.5rem;
  background: linear-gradient(135deg, #1D1D1F 0%, #DB2955 100%);
  color: white;
  text-decoration: none;
  border-radius: 50px;
  font-weight: 700;
  font-size: 1.1rem;
  transition: all 0.3s ease;
  box-shadow: 0 8px 25px rgba(29, 29, 31, 0.2);
}

.featured-collections__view-all-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 35px rgba(29, 29, 31, 0.3);
}

@media screen and (max-width: 768px) {
  .featured-collections {
    padding: 3rem 1rem;
  }
  
  .featured-collections__title {
    font-size: 2rem;
  }
  
  .featured-collections__subtitle {
    font-size: 1.1rem;
  }
  
  .featured-collections__grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .featured-collection__image-container {
    height: 220px;
  }
}

@media screen and (max-width: 480px) {
  .featured-collections__grid {
    grid-template-columns: 1fr;
  }
  
  .featured-collection__content {
    padding: 1rem;
  }
}
{% endstylesheet %}

<section class="featured-collections">
  <div class="featured-collections__header">
    {% if section.settings.title != blank %}
      <h2 class="featured-collections__title">{{ section.settings.title }}</h2>
    {% else %}
      <h2 class="featured-collections__title">Featured Collections</h2>
    {% endif %}
    
    {% if section.settings.subtitle != blank %}
      <p class="featured-collections__subtitle">{{ section.settings.subtitle }}</p>
    {% else %}
      <p class="featured-collections__subtitle">Discover our carefully curated collections designed for movement and intention.</p>
    {% endif %}
  </div>

  <div class="featured-collections__grid">
    {% for block in section.blocks %}
      {% if block.type == 'collection' %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection != blank %}
          <div class="featured-collection" {{ block.shopify_attributes }}>
            <div class="featured-collection__image-container">
              {% if collection.image %}
                <img 
                  src="{{ collection.image | image_url: width: 400 }}" 
                  alt="{{ collection.title }}" 
                  class="featured-collection__image"
                  loading="lazy"
                />
              {% else %}
                <img 
                  src="{{ 'image.png' | asset_url }}" 
                  alt="{{ collection.title }}" 
                  class="featured-collection__image"
                  loading="lazy"
                />
              {% endif %}
              
              <div class="featured-collection__overlay">
                <a href="{{ collection.url }}" class="featured-collection__overlay-btn">
                  View Collection
                </a>
              </div>
            </div>
            
            <div class="featured-collection__content">
              <a href="{{ collection.url }}" class="featured-collection__title">
                {{ collection.title }}
              </a>
              
              {% if collection.description != blank %}
                <p class="featured-collection__description">
                  {{ collection.description | strip_html | truncate: 100 }}
                </p>
              {% else %}
                <p class="featured-collection__description">
                  Discover our latest {{ collection.title | downcase }} designed for comfort and style.
                </p>
              {% endif %}
              
              <div class="featured-collection__meta">
                <span class="featured-collection__product-count">
                  {{ collection.products_count }} products
                </span>
                {% if block.settings.show_badge %}
                  <span class="featured-collection__badge">
                    {{ block.settings.badge_text | default: 'New' }}
                  </span>
                {% endif %}
              </div>
              
              <a href="{{ collection.url }}" class="featured-collection__cta">
                Shop Now
              </a>
            </div>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}
  </div>

  {% if section.settings.show_view_all %}
    <div class="featured-collections__view-all">
      <a href="/collections/all" class="featured-collections__view-all-btn">
        {{ section.settings.view_all_text | default: 'View All Collections' }}
      </a>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Discover our carefully curated collections designed for movement and intention."
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View All Collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "checkbox",
          "id": "show_badge",
          "label": "Show badge",
          "default": false
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge text",
          "default": "New"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
